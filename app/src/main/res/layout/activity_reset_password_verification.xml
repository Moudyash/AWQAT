<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reset_Password_Verification"
    android:orientation="vertical"
    android:gravity="end"
    android:fitsSystemWindows="true"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleMarginStart="65dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextColor="@color/blue_text" />

    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تم إرسال كود تحقق للرقم +966874** يرجى إدخال كود التحقق هنا"
        android:textSize="16sp"
        android:textColor="@color/gery_text"
android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/first_number"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_edittext"
            android:contentDescription="1st"
            />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:layout_marginEnd="30dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/second_number"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_edittext"
            android:contentDescription="2nd"
            />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/third_number"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_edittext"

            android:contentDescription="3rd"
            />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fourth_number"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/rounded_edittext"
            android:contentDescription="4th"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/Resend_Code"
            android:textColor="@color/blue_text"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_marginEnd="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="لم يصلني كود التحقق؟"
            android:textColor="@color/black_text"
            android:textSize="14sp"
            android:layout_gravity="end"
            />


    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:id="@+id/signupbtn"
        android:layout_marginTop="250dp"
        android:layout_width="369dp"
        android:layout_height="51dp"
        android:textColor="@color/white"
        android:background="@drawable/btn"
        android:text="تحقق"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat"

        />
</LinearLayout>